<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3C3C4"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C9C9C6"
        android:fontFamily="serif"
        android:text="Bienvenue sur MuntuGo"
        android:textAlignment="center"
        android:textColor="#DD273A7C"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="262dp"
        android:layout_height="248dp"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription,MissingConstraints,ImageContrastCheck"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/reservationButton"
        android:layout_width="156dp"
        android:layout_height="69dp"
        android:layout_margin="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="serif"
        android:text="Muntu Voyage"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:iconPadding="8dp"
        app:iconTintMode="screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Button
        android:id="@+id/gestionButton"
        android:layout_width="175dp"
        android:layout_height="71dp"
        android:layout_margin="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="serif"
        android:text="Muntu Transport"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:iconPadding="8dp"
        app:iconTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>